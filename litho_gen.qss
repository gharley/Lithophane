*{
    background-color: #d3d3d3;
    color: black;
}

QLabel{
    min-width: 10em;
}

QLabel.input, QLineEdit{
    padding: .25em 0 .25em .25em;
    border: 1px solid gray;
    border-radius: 5px;
}

QLineEdit{
    background-color: whitesmoke;
}

QWidget#plotWidget{
    background-color: #aaaaaa;
}

QProgressBar {
    border: 2px solid gray;
    border-radius: 5px;
}

QProgressBar::chunk {
    background-color: #05B8CC;
    width: 20px;
    margin: 0.5px;
}
